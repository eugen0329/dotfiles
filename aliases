getjson() {
  # -s: silent mode
  local responce=$(curl -s -H "Accept: application/json" $@)
  echo $responce | node -e \
  "\
   s=process.openStdin();\
   d=[];\
   s.on('data',function(c){\
     d.push(c);\
   });\
   s.on('end',function(){\
     console.log(JSON.stringify(JSON.parse(d.join('')),null,2));\
   });\
  "
}


postjson() {
  curl \
    -H "Accept: application/json" \
    -H "Content-Type:application/json" \
    -X POST --data $2 \
    -i $1
}



