alias ns='netstat -tulpn'

n(){
  local fname
  # fname=$(find ~/Dropbox/Notes/ -iname "*$1*" | sort -n -s | head -n1)
  fname=$(find ~/Notes/ -iname "*$1*" | awk '{ print length($0) " " $0; }' | sort -n | awk '$0=$2' | head -n1)
  if [ -n  "$fname" ] ; then
    v $fname
  else
    v "$HOME/Notes/$1.md"
  fi
}
function _n { reply=($(ls $HOME/Notes)) }
compctl -K _n n

